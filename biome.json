{
	"$schema": "https://biomejs.dev/schemas/2.2.5/schema.json",
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noExplicitAny": "off",
				"noThenProperty": "off"
			},
			"correctness": {
				"noUnusedVariables": "off",
				"useYield": "off"
			},
			"style": {
				"useConst": "error"
			}
		}
	},
	"formatter": {
		"enabled": true,
		"lineWidth": 80
	},
	"javascript": {
		"formatter": {
			"trailingCommas": "all"
		}
	}
}
